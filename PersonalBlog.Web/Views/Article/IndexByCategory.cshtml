@model List<ArticleDto>

<div class="p-5 bg-black mb-5" style="background-color:background-color: rgba(255,255,255,0.02);">
    <h3 class="d-flex justify-content-between align-items-center" style="color: burlywood; font-weight: bolder;">
        <p>Makale Sonuçları</p>
    </h3>
    <div class="search-result mt-5">
        @foreach (var article in Model)
        {
            <div>
                <h5 style="color: white; font-weight: bolder; padding: ;"><a asp-action="Detail" asp-controller="Article"
                        asp-route-id="@article.Id">@article.Title</a></h5>
                <p style="font-weight: 300; font-size: small;">@article.CreatedDate</p>
            </div>
        }
    </div>
</div>
